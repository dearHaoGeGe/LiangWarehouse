<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud">
    <EditText android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:hint="@string/input_word"
        android:drawableRight="@mipmap/behind_sliding_back"
        android:drawableLeft="@mipmap/behind_sliding_search"
        android:background="@drawable/behind_sliding_edit_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/searchThing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/search_good"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:background="@drawable/follow_btn_press"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:id="@+id/searchUser"-->
            <!--android:layout_width="0dp"-->
            <!--android:text="搜索用户"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textColor="@color/colorPrimary"-->
            <!--android:gravity="center"-->
            <!--android:background="@drawable/follow_btn_press"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchGoodsShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
