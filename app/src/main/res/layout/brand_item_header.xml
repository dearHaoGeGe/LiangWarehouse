<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center"
    android:background="@mipmap/riding_bike">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/brandItemHeadIv"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@mipmap/liangcang_logo_80"
            android:layout_centerInParent="true"
            android:paddingBottom="15dp"/>
        <TextView
            android:id="@+id/brandItemHeadTv"
            android:padding="15dp"
            android:layout_below="@+id/brandItemHeadIv"
            android:textColor="@color/textColorWrite"
            android:gravity="center"
            android:paddingTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
